<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userPhotoView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/postSourceNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/userPhotoView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/postDateView"
        android:maxLines="1"
        android:textColor="@color/colorTitleText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/postDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/userPhotoView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/colorBottomPrimaryDark"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/likesIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignStart="@id/userPhotoView"
        android:layout_alignTop="@id/postPhotoView"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_favorite" />

    <ImageView
        android:id="@+id/viewsIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/likesIcon"
        android:layout_alignStart="@id/userPhotoView"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_eye" />

    <TextView
        android:id="@+id/postIdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewsIcon"
        android:layout_alignStart="@id/userPhotoView"
        android:textSize="8sp" />


    <com.vvsemir.kindawk.ui.ResizableTextView
        android:id="@+id/postTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postPhotoView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/postPhotoView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userPhotoView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:background="@color/colorBgFragments"
        android:contentDescription="@null"
        android:minWidth="48dp"
        android:scaleType="fitStart" />

    <!--TextView
        android:id="@+id/sourceUrlView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postTextView"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/postUrlView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sourceUrlView"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" /-->

</RelativeLayout>

